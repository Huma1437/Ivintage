<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    tools:context=".StudentFiles.Test_Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/header" />


    <LinearLayout
        android:id="@+id/strip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/header_color">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/clock"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/duration"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/duration"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/icons"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/left"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/time_left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/time_left"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/icons"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_bg_trans"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:focusableInTouchMode="true"
                android:background="@drawable/options_border"
                android:padding="5dp">

                <TextView
                    android:id="@+id/ques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_toRightOf="@+id/quesNum"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:justificationMode="inter_word"/>


                <TextView
                    android:id="@+id/hindi_ques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_toRightOf="@+id/quesNum"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"

                    android:justificationMode="inter_word"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quesImg"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <SurfaceView
                android:id="@+id/surfaceview"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_marginTop="-10dp" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/op1Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/options_border">



                    <TextView
                        android:id="@+id/op1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_margin="5dp"
                        android:justificationMode="inter_word"

                        android:textColorHint="@color/primary_text"
                        android:textColor="@color/primary_text"/>

                        <TextView
                            android:id="@+id/hindi_op1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_margin="5dp"
                            android:justificationMode="inter_word"

                            android:textColorHint="@color/primary_text"
                            android:textColor="@color/primary_text"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/optImg1"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/op2Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/options_border">

                    <TextView
                        android:id="@+id/op2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_margin="5dp"
                        android:justificationMode="inter_word"

                        android:textColorHint="@color/primary_text"
                        android:textColor="@color/primary_text"/>

                        <TextView
                            android:id="@+id/hindi_op2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_margin="5dp"
                            android:justificationMode="inter_word"

                            android:textColorHint="@color/primary_text"
                            android:textColor="@color/primary_text"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/optImg2"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/op3Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/options_border">

                    <TextView
                        android:id="@+id/op3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_margin="5dp"
                        android:justificationMode="inter_word"

                        android:textColorHint="@color/primary_text"
                        android:textColor="@color/primary_text"/>

                        <TextView
                            android:id="@+id/hindi_op3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_margin="5dp"
                            android:justificationMode="inter_word"

                            android:textColorHint="@color/primary_text"
                            android:textColor="@color/primary_text"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/optImg3"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/op4Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/options_border">

                    <TextView
                        android:id="@+id/op4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_margin="5dp"
                        android:justificationMode="inter_word"
                        android:textColorHint="@color/primary_text"
                        android:textColor="@color/primary_text"/>


                        <TextView
                            android:id="@+id/hindi_op4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_margin="5dp"
                            android:justificationMode="inter_word"

                            android:textColorHint="@color/primary_text"
                            android:textColor="@color/primary_text"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/optImg4"
                            android:layout_gravity="center" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/clear"
                        android:layout_gravity="right|center_vertical"
                        android:text="CLEAR SELECTION"
                        android:layout_margin="10dp"
                        android:textColor="@color/primary_text"
                        android:textSize="15sp"
                        android:background="@drawable/black_btn_border"
                        android:padding="10dp"/>

        </LinearLayout>
    </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/icons"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_border"
                android:text="Previous"
                android:textColor="@color/primary_text"
                android:textSize="12sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review"
                android:text="Mark for Review"
                android:layout_margin="2dp"
                android:textColor="@color/primary_text"
                android:textSize="12sp"
                android:layout_toRightOf="@id/pre"
                android:background="@drawable/btn_border"
                android:padding="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next"
                android:text="Next"
                android:textColor="@color/primary_text"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@id/review"
                android:background="@drawable/btn_border"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/finish"
                android:text="Finish"
                android:layout_margin="2dp"
                android:textColor="@color/primary_text"
                android:textSize="12sp"
                android:layout_toRightOf="@id/next"
                android:background="@drawable/btn_border" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/secondary_text"/>

            <LinearLayout
                android:id="@+id/EditBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


            <LinearLayout
                android:id="@+id/leftlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ed1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/cir1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/green_circle"
                    android:text=""
                    android:gravity="center"
                    android:shadowColor="@color/transparent"
                    android:shadowRadius="10.0"
                    android:padding="2dp"
                    android:textColor="@color/icons"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answered"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/primary_text"/>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ed2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cir2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/grey_circle"
                        android:text=""
                        android:gravity="center"
                        android:shadowColor="@color/transparent"
                        android:shadowRadius="10.0"
                        android:padding="2dp"
                        android:textColor="@color/icons"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Visited"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/primary_text"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ed3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cir3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/red_circle"
                        android:text=""
                        android:gravity="center"
                        android:shadowColor="@color/transparent"
                        android:shadowRadius="10.0"
                        android:padding="2dp"
                        android:textColor="@color/icons"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Answered"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/primary_text"/>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ed4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cir4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/purple_circle"
                        android:text=""
                        android:gravity="center"
                        android:shadowColor="@color/transparent"
                        android:shadowRadius="10.0"
                        android:padding="2dp"
                        android:textColor="@color/icons"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Review Later"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/primary_text"/>
                </LinearLayout>


            </LinearLayout>
            </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/verticalView"
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/leftlayout"
                    android:background="@color/secondary_text"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/palatte"
                    android:text="View Palette"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_border"
                    android:padding="5dp"/>


            </LinearLayout>


            </LinearLayout>

</LinearLayout>

</LinearLayout>
</LinearLayout>