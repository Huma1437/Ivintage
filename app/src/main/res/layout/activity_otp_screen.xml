<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/icons"
    tools:context=".StudentFiles.OtpScreen">

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/light_bg_trans"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/enrolnum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="15sp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                />
<!--
            <TextView
                android:id="@+id/stdname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/primary_text"
                />-->

        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@drawable/user"
                android:id="@+id/stdpic"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stdpic_upload"
                android:text="Upload Student Photo"
                android:layout_gravity="center"
                android:padding="15dp"
                android:layout_margin="10dp"
                android:background="@color/light_bg_trans"
                android:textColor="@color/primary_text"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:background="@drawable/user"
                    android:id="@+id/assimage"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/assimg_upload"
                    android:text="Upload Assessor Photo"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:layout_margin="10dp"
                    android:background="@color/light_bg_trans"
                    android:textColor="@color/primary_text"/>

            </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/otp"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:hint="Enter OTP"
            android:backgroundTint="@color/primary_text"
            android:textColorHint="@color/light_bg_trans"
            android:inputType="number"
            android:textColor="@color/primary_text"
            android:gravity="center"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:text="Submit"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/light_bg_trans"
            android:textColor="@color/primary_text"
            android:layout_gravity="center"/>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>